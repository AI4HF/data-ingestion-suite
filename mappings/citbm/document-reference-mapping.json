{
  "id": "document-reference-mapping",
  "url": "https://ai4hf.eu/fhir/mappings/citbm/document-reference-mapping",
  "name": "document-reference-mapping",
  "title": "Document Reference Mapping",
  "isDraft": true,
  "source": [
    {
      "alias": "document",
      "url": "https://ai4hf.eu/fhir/schemas/citbm/DocumentReference",
      "joinOn": []
    }
  ],
  "context": {},
  "variable": [],
  "mapping": [
    {
      "description": "Document reference for recording the clinical examination conducted during the encounter if it exists.",
      "precondition": {
        "name": "clinicalExaminationExists",
        "language": "text/fhirpath",
        "expression": "data.hasValue()"
      },
      "expression": {
        "name": "clinicalExamination",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('DocumentReference', identifier)}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-DocumentReference"
            ]
          },
          "resourceType": "DocumentReference",
          "type": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "34117-2",
                "display": "History and physical note"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', subject)}}",
          "context": [
            "{{mpp:createFhirReferenceWithHashedId('Encounter', Patient & encounter.lower())}}"
          ],
          "content": [
            {
              "attachment": {
                "contentType": "text/plain",
                "language": "es",
                "data": "{{data.encode()}}"
              }
            }
          ],
          "status": "current"
        }
      }
    }
  ]
}