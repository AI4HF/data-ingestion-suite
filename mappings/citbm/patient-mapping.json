{
  "id": "patient-mapping",
  "url": "https://ai4hf.eu/fhir/mappings/citbm/patient-mapping",
  "name": "patient-mapping",
  "title": "Patient mapping",
  "isDraft": false,
  "source": [
    {
      "alias": "patient",
      "url": "https://ai4hf.eu/fhir/schemas/citbm/Patient",
      "joinOn": []
    }
  ],
  "context": {
    "genderConceptMap": {
      "category": "concept-map",
      "url": "$CONTEXT_REPO/citbm/gender.csv"
    }
  },
  "variable": [],
  "mapping": [
    {
      "description": "The patient.",
      "expression": {
        "name": "patient",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('Patient', patientId)}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Patient|latest"
            ]
          },
          "resourceType": "Patient",
          "gender": "{{mpp:getConcept(%genderConceptMap, gender, 'target_code')}}",
          "birthDate": "{{birthDate.utl:toFhirDate('d.MM.yyyy')}}",
          "deceasedDateTime": "{{? deceasedDateTime.utl:toFhirDate('d.MM.yyyy')}}",
          "address": [
            {
              "use": "home",
              "city": "{{? iif(city = '0', {}, city)}}",
              "district": "{{? iif(district = '0', {}, district)}}",
              "postalCode": "{{? postalCode}}"
            }
          ],
          "extension": [
            {
              "url": "https://ai4hf.eu/fhir/StructureDefinition/Ethnicity",
              "valueCodeableConcept": {
                "coding": [
                  {
                    "system": "https://datatools4heart.eu/fhir/ValueSet/ethnicity",
                    "code": "414408004",
                    "display": "Hispanic"
                  }
                ]
              }
            }
          ]
        }
      }
    }
  ]
}