{
  "id": "condition-mapping",
  "url": "https://ai4hf.eu/fhir/mappings/citbm/condition-mapping",
  "name": "condition-mapping",
  "title": "Condition Mapping",
  "isDraft": false,
  "source": [
    {
      "alias": "medication",
      "url": "https://ai4hf.eu/fhir/schemas/citbm/Condition",
      "joinOn": []
    }
  ],
  "context": {},
  "variable": [],
  "mapping": [
    {
      "description": "The patient's diagnosis.",
      "expression": {
        "name": "diagnosis",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('Condition',subject & encounter.lower() & code)}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Condition"
            ]
          },
          "resourceType": "Condition",
          "code": {
            "coding": [
              {
                "code": "{{code}}",
                "system": "http://hl7.org/fhir/sid/icd-10",
                "@sliceName": "icd10Code"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', subject)}}",
          "encounter": "{{mpp:createFhirReferenceWithHashedId('Encounter', subject & encounter.lower())}}",
          "onsetDateTime": "{{onsetDataTime.utl:toFhirDateTime('yyyy-MM-dd HH:mm:ss')}}",
          "clinicalStatus": {
            "coding": [
              {
                "code": "active",
                "system": "http://hl7.org/fhir/ValueSet/condition-clinical",
                "display": "Active"
              }
            ]
          },
          "category": [
            {
              "coding": [
                "{{utl:createFhirCoding('http://terminology.hl7.org/CodeSystem/condition-category', 'encounter-diagnosis', 'Encounter Diagnosis')}}"
              ]
            }
          ]
        }
      }
    }
  ]
}