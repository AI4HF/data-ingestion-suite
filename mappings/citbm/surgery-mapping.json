{
  "id": "surgery-mapping",
  "url": "https://ai4hf.eu/fhir/mappings/citbm/surgery-mapping",
  "name": "surgery-mapping",
  "title": "Surgery Mapping",
  "isDraft": true,
  "source": [
    {
      "alias": "surgery",
      "url": "https://ai4hf.eu/fhir/schemas/citbm/Surgery",
      "joinOn": []
    }
  ],
  "context": {
    "procedureStatusConcept": {
      "category": "concept-map",
      "url": "$CONTEXT_REPO/citbm/procedure-status.csv"
    },
    "practitionerRoleConcept": {
      "category": "concept-map",
      "url": "$CONTEXT_REPO/citbm/practitioner-role.csv"
    }
  },
  "variable": [
    {
      "name": "practitionerRole",
      "language": "text/fhirpath",
      "expression": "mpp:getConcept(%practitionerRoleConcept, Performer)"
    }
  ],
  "mapping": [
    {
      "description": "The surgery.",
      "expression": {
        "name": "surgery",
        "language": "application/fhir-template+json",
        "value": {
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Procedure"
            ]
          },
          "resourceType": "Procedure",
          "category": [
            {
              "coding": [
                {
                  "system": "http://snomed.info/sct",
                  "code": "387713003",
                  "display": "Surgical procedure (procedure)"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://hl7.org/fhir/sid/icd-10-pcs",
                "@sliceName": "icdCode"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', Participante)}}",
          "encounter": "{{mpp:createFhirReferenceWithHashedId('Encounter', Participante & encounter)}}",
          "occurrenceDateTime": "{{OcurrenceDateTime.utl:toFhirDate('dd.MM.yyyy')}}",
          "performer": [
            {
              "actor": "{{mpp:createFhirReferenceWithHashedId('PractitionerRole', Performer)}}"
            }
          ],
          "reason": [
            {
              "reference": "{{mpp:createFhirReferenceWithHashedId('Condition', Participante & encounter )}}",
              "@sliceName": "procedureReason"
            }
          ],
          "status": "{{mpp:getConcept(%procedureStatusConcept, Estado, 'target_code')}}"
        }
      }
    },
    {
      "description": "The role of the practitioner who performed the surgery.",
      "expression": {
        "name": "practitionerRole",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('PractitionerRole', Performer)}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-PractitionerRole"
            ]
          },
          "resourceType": "PractitionerRole",
          "code": [
            {
              "coding": [
                {
                  "code": "{{%practitionerRole.target_code}}",
                  "system": "http://terminology.hl7.org/CodeSystem/practitioner-role",
                  "display": "{{%practitionerRole.target_display}}"
                }
              ],
              "@sliceName": "hfrPractitionerRole"
            }
          ],
          "specialty": [
            {
              "coding": [
                {
                  "code": "394814009",
                  "system": "http://snomed.info/sct",
                  "display": "General practice",
                  "@sliceName": "hfrSpecialty"
                }
              ]
            }
          ]
        }
      }
    }
  ]
}