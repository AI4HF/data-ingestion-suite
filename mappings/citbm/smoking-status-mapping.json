{
  "id": "smoking-status-mapping",
  "url": "https://ai4hf.eu/fhir/mappings/citbm/smoking-status-mapping",
  "name": "smoking-status-mapping",
  "title": "Smoking Status Mapping",
  "isDraft": false,
  "source": [
    {
      "alias": "medication",
      "url": "https://ai4hf.eu/fhir/schemas/citbm/SmokingStatus",
      "joinOn": []
    }
  ],
  "context": {
    "smokingStatusContext": {
      "category": "concept-map",
      "url": "$CONTEXT_REPO/citbm/smoking-status.csv"
    }
  },
  "variable": [],
  "mapping": [
    {
      "description": "The smoking status of patient.",
      "expression": {
        "name": "smokingStatus",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('Observation', subject & encounter & 'Smoking Status')}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-SmokingStatus"
            ]
          },
          "resourceType": "Observation",
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', subject)}}",
          "encounter": "{{mpp:createFhirReferenceWithHashedId('Encounter',subject & encounter.lower())}}",
          "effectivePeriod": {
            "start": "{{startDate.utl:toFhirDateTime()}}"
          },
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "social-history",
                  "display": "Social History"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "72166-2",
                "display": "Tobacco smoking status",
                "@sliceName": "loincCode"
              }
            ]
          },
          "valueCodeableConcept": {
            "coding": [
              {
                "system": "http://snomed.info/sct",
                "code": "77176002",
                "display": "Smoker, current status unknown"
              }
            ]
          },
          "status": "final"
        }
      }
    }
  ]
}