{
  "id" : "CPRD-Aurum-Patient-Mapping",
  "url" : "https://ai4hf.eu/fhir/mappings/cprd/CPRD-Aurum-Patient-Mapping",
  "name" : "CPRD-Aurum-Patient-Mapping",
  "title" : "CPRD-Aurum-Patient-Mapping",
  "source" : [ {
    "alias" : "patient",
    "url" : "https://ai4hf.eu/fhir/schemas/cprd/CPRD-Aurum-Patient",
    "joinOn" : [ "patid" ]
  }, {
    "alias" : "linkageEligibility",
    "url" : "https://ai4hf.eu/fhir/schemas/cprd/CPRD-Linkage-Eligibility",
    "joinOn" : [ "patid" ]
  }, {
    "alias" : "deathRegistration",
    "url" : "https://ai4hf.eu/fhir/schemas/cprd/ONS-Death-Registration",
    "joinOn" : [ "patid" ]
  } ],
  "context" : { },
  "variable" : [ {
    "name" : "isEligible",
    "language" : "text/fhirpath",
    "expression" : " %linkageEligibility.death_e = 1"
  }, {
    "name" : "deathDate",
    "language" : "text/fhirpath",
    "expression" : " %deathRegistration.dod "
  } ],
  "mapping" : [ {
    "expression" : {
      "name" : "patient",
      "language" : "application/fhir-template+json",
      "value" : {
        "gender" : "{{iif( gender = 1, 'male', iif(gender = 2, 'female', iif(gender = 3, 'other', 'unknown')))}}",
        "birthDate" : "{{iif(mob.exists() = false, yob.toString().toDate(), (yob.toString() + '-' + mob.toString()).utl:toFhirDate('yyyy-M'))}}",
        "deceasedDateTime" : {
          "{{#deceasedDateTimeVar}}" : "{{iif(%isEligible = true and %deathDate.exists(), %deathDate.utl:toFhirDateTime('dd/MM/yyyy'), {})}}",
          "{{?}}" : "{{ %deceasedDateTimeVar }}"
        },
        "id" : "{{mpp:getHashedId('Patient', patid)}}",
        "meta" : {
          "profile" : [ "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Patient" ]
        },
        "resourceType" : "Patient"
      }
    }
  } ]
}