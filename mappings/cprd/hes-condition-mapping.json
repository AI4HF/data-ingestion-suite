{
  "id": "hes-condition-mapping",
  "url": "https://ai4hf.eu/fhir/mappings/cprd/hes-condition-mapping",
  "name": "hes-condition-mapping",
  "title": "hes-condition-mapping",
  "isDraft": false,
  "source": [
    {
      "alias": "diagnosis",
      "url": "https://ai4hf.eu/fhir/schemas/cprd/Hes-diagnosis",
      "joinOn": [
        "patid"
      ]
    },
    {
      "alias": "patient",
      "url": "https://ai4hf.eu/fhir/schemas/cprd/Aurum-patient",
      "joinOn": [
        "patid"
      ]
    }
  ],
  "context": {},
  "variable": [
    {
      "name": "diagnosisDate",
      "language": "text/fhirpath",
      "expression": "admidate.utl:toFhirDateTime('dd/MM/yyyy')"
    },
    {
      "name": "isApplicableRecord",
      "language": "text/fhirpath",
      "expression": "%diagnosisDate >= '01/04/1997'.utl:toFhirDateTime('dd/MM/yyyy') and %diagnosisDate <= '31/10/2020'.utl:toFhirDateTime('dd/MM/yyyy')"
    },
    {
      "name": "isBetweenPatientRegDates",
      "language": "text/fhirpath",
      "expression": "%patient.regstartdate.utl:toFhirDateTime('dd/MM/yyyy') <= %diagnosisDate and iif(%patient.regenddate.exists(),%patient.regenddate.utl:toFhirDateTime('dd/MM/yyyy') >= %diagnosisDate,true)"
    }
  ],
  "mapping": [
    {
      "precondition": {
        "name": "isCondition",
        "language": "text/fhirpath",
        "expression": "%isApplicableRecord and %isBetweenPatientRegDates and ICD.exists() and patid.exists() and spno.exists() and admidate.exists() "
      },
      "expression": {
        "name": "condition",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{iif(ICDx.exists(), mpp:getHashedId('Condition', (patid + '-' + spno + '-' + ICD + '-' + ICDx)), mpp:getHashedId('Condition', (patid + '-' + spno + '-' + ICD)))}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Condition"
            ]
          },
          "resourceType": "Condition",
          "code": {
            "coding": [
              {
                "code": "{{ iif( ICDx.exists(), (ICD + ICDx), ICD) }}",
                "system": "http://hl7.org/fhir/sid/icd-10",
                "@sliceName": "icd10Code"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', patid)}}",
          "encounter": "{{mpp:createFhirReferenceWithHashedId('Encounter', (patid + '-' + spno))}}",
          "onsetDateTime": "{{ %diagnosisDate }}",
          "identifier": [
            {
              "value": "{{ (patid + '-' + spno + '-' + ICD) }}"
            }
          ],
          "clinicalStatus": {
            "coding": [
              {
                "code": "active",
                "system": "http://hl7.org/fhir/ValueSet/condition-clinical",
                "display": "Active"
              }
            ]
          },
          "category": [
            {
              "coding": [
                "{{utl:createFhirCoding('http://terminology.hl7.org/CodeSystem/condition-category', 'encounter-diagnosis', 'Encounter Diagnosis')}}"
              ]
            }
          ]
        }
      }
    }
  ]
}