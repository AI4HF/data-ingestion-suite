{
  "id": "symptom mapping",
  "url": "https://ai4hf.eu/fhir/mappings/muhas/SymptomMapping",
  "name": "Symptom Mapping",
  "title": "The mapping of the MUHAS Symptom data into AI4HF Symptom profile.",
  "isDraft": false,
  "source": [
    {
      "alias": "symptom",
      "url": "https://ai4hf.eu/fhir/schemas/muhas/Symptom",
      "joinOn": []
    }
  ],
  "context": {},
  "variable": [],
  "mapping": [
    {
      "description": "The AI4HF Symptom profile.",
      "expression": {
        "name": "symptom",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('Observation', pid & date & snomed_code)}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Symptom"
            ]
          },
          "resourceType": "Observation",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "{{category}}",
                  "display": "{{category}}"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://snomed.info/sct",
                "code": "{{snomed_code}}",
                "display": "{{display}}",
                "@sliceName": "snomedCode"
              }
            ]
          },
          "effectiveDateTime": "{{iif(date.length() = 10,date.utl:toFhirDate('yyyy-MM-dd'),date.utl:toFhirDateTime('yyyy-MM-dd HH:mm'))}}",
          "valueBoolean": true,
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', pid)}}",
          "encounter": "{{? iif(visit.exists(),mpp:createFhirReferenceWithHashedId('Encounter', pid & visit.toString()),{})}}",
          "status": "final"
        }
      }
    }
  ]
}