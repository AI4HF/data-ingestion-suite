{
  "id": "echocardiograph mapping",
  "url": "https://ai4hf.eu/fhir/mappings/muhas/EchocardiographMapping",
  "name": "Echocardiograph Mapping",
  "title": "The mapping of the MUHAS Echocardiograph data into AI4HF Echocardiograph profile.",
  "isDraft": false,
  "source": [
    {
      "alias": "echocardiograph",
      "url": "https://ai4hf.eu/fhir/schemas/muhas/Echocardiograph",
      "joinOn": []
    }
  ],
  "context": {},
  "variable": [],
  "mapping": [
    {
      "description": "The AI4HF Echocardiograph profile.",
      "expression": {
        "name": "echocardiograph",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('Observation', pid & date & 'Echo')}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Echocardiograph"
            ]
          },
          "resourceType": "Observation",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "imaging",
                  "display": "Imaging"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "34552-0",
                "display": "Cardiac 2D echo panel",
                "@sliceName": "loincCode"
              }
            ]
          },
          "effectiveDateTime": "{{date.utl:toFhirDate('yyyy-MM-dd' | 'yyyy-MM-dd HH:mm' | 'yyyy')}}",
          "component": [
            {
              "code": {
                "coding": [
                  {
                    "system": "http://loinc.org",
                    "code": "8806-2",
                    "display": "Left ventricular Ejection fraction by 2D echo"
                  }
                ]
              },
              "valueQuantity": {
                "system": "http://unitsofmeasure.org",
                "value": "{{lvef}}",
                "unit": "%"
              },
              "@sliceName": "echoParameter"
            }
          ],
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', pid)}}",
          "encounter": "{{? iif(visit.exists(),mpp:createFhirReferenceWithHashedId('Encounter', pid & visit.toString()),{})}}",
          "status": "final"
        }
      }
    }
  ]
}