{
  "id": "smoking status mapping",
  "url": "https://ai4hf.eu/fhir/mappings/muhas/SmokingStatusMapping",
  "name": "Smoking Status Mapping",
  "title": "The mapping of the MUHAS Smoking Status data into AI4HF SmokingStatus profile.",
  "isDraft": false,
  "source": [
    {
      "alias": "smokingStatus",
      "url": "https://ai4hf.eu/fhir/schemas/muhas/SmokingStatus",
      "joinOn": []
    }
  ],
  "context": {},
  "variable": [],
  "mapping": [
    {
      "description": "The AI4HF SmokingStatus profile.",
      "expression": {
        "name": "smokingStatus",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('Observation', pid & date & 'SmokingStatus')}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-SmokingStatus"
            ]
          },
          "resourceType": "Observation",
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', pid)}}",
          "effectivePeriod": {
            "start": "{{date}}"
          },
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "social-history",
                  "display": "Social History"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "72166-2",
                "display": "Tobacco smoking status",
                "@sliceName": "loincCode"
              }
            ]
          },
          "valueCodeableConcept": "{{utl:createFhirCodeableConcept('http://snomed.info/sct', snomed_code, display)}}",
          "status": "final"
        }
      }
    }
  ]
}