{
  "id": "encounter mapping",
  "url": "https://ai4hf.eu/fhir/mappings/muhas/EncounterMapping",
  "name": "Encounter Mapping",
  "title": "The mapping of the MUHAS encounter data into AI4HF Encounter profile.",
  "isDraft": false,
  "source": [
    {
      "alias": "encounter",
      "url": "https://ai4hf.eu/fhir/schemas/muhas/Encounter",
      "joinOn": []
    }
  ],
  "context": {},
  "variable": [],
  "mapping": [
    {
      "description": "The AI4HF Encounter profile.",
      "expression": {
        "name": "encounter",
        "language": "application/fhir-template+json",
        "value": {
          "id": "{{mpp:getHashedId('Encounter', pid & visit.toString())}}",
          "meta": {
            "profile": [
              "https://datatools4heart.eu/fhir/StructureDefinition/HFR-Encounter"
            ]
          },
          "resourceType": "Encounter",
          "class": [
            {
              "coding": [
                "{{utl:createFhirCoding('http://terminology.hl7.org/CodeSystem/v3-ActCode', 'IMP', 'inpatient encounter')}}"
              ]
            }
          ],
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', pid)}}",
          "actualPeriod": {
            "start": "{{iif(startDate.length() = 10,startDate.utl:toFhirDateTime('yyyy-MM-dd'),startDate.utl:toFhirDateTime('yyyy-MM-dd HH:mm'))}}",
            "end": "{{iif(endDate.length() = 10,endDate.utl:toFhirDateTime('yyyy-MM-dd'),endDate.utl:toFhirDateTime('yyyy-MM-dd HH:mm'))}}"
          },
          "admission": {
            "admitSource": {
              "{{#admitSourceVar}}": "{{fromEMD == true}}",
              "{{?}}": {
                "coding": [
                  {
                    "system": "http://terminology.hl7.org/CodeSystem/admit-source",
                    "code": "emd",
                    "display": "From accident/emergency department"
                  }
                ]
              }
            }
          },
          "status": "completed"
        }
      }
    }
  ]
}